<div class="mt-4">
    <h3>CẬP NHẬT KHÓA HỌC</h3>
    <form method="POST" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học </label>
            <input type="text" class="form-control" value="{{courses.name}}" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea  class="form-control"  name="description" id="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" value="{{courses.videoId}}" name="videoId" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">trình độ</label>
            <input type="text" class="form-control" value="{{courses.level}}" name="level" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>